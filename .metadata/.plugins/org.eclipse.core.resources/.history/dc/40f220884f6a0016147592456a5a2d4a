<!-- spring-old-aop.xml -->
<!-- Aspektno orijentisano programiranje u nastanku Spring okvira. -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean id="service" class="milan.panic.master.spring.aop.ServiceImpl" />
	<!-- Savet koji je definisan kao Spring objekat -->
	<bean id="aroundMethodBean" class="milan.panic.master.spring.aop.AroundMethod" />

	<!-- Spring objekat koji kreira zastupnika i enkapsulira svu ostalu 
		logiku unutar sebe -->
	<bean id="serviceProxy"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<!--Ručno definisanje oko kog interfejsa treba kreirati zastupnik. 
			Nije neophodno eksplicitno defnisanje: ukoliko nije definisan, automatski 
			će se ustanoviti kojim interfejsima klasa pripada. Ako klasa ne implementira 
			interfejse kreira se CGLIB proxy. -->
		<property name="proxyInterfaces" value="milan.panic.master.spring.aop.Service" />
		<!--Objekat oko koga se kreira zastupnik -->
		<property name="target" ref="service" />
		<!--Lista saveta koji se proseđuju zastupniku -->
		<property name="interceptorNames">
			<list>
				<value>aroundMethodBean</value>
			</list>
		</property>
	</bean>

</beans>