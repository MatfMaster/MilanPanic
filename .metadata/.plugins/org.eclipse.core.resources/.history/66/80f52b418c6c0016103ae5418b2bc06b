package milan.panic.master.spring.aop;

/**
 * Uključuje se definicija tačka spajanja iz AspectJ projekta.
 */
import org.aspectj.lang.JoinPoint;

/**
 * Xml definicija aspekta. Aspekt se definiše kao najobičniji
 * objekat(Spring objekat), on služi samo za definisanje metoda koji
 * će služiti kao saveti, kasnije, u xml konfiguraciji se registruje
 * tačka preseka i ovaj objekat koristi kao referenca za savete.
 */
public class XmlAspect {
	public void beforeMethod(JoinPoint joinPoint) {
		System.out.println("Before advice-Xml defined aspect.");
	}
}